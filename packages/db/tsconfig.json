{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@repo/*": ["../*/"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}


